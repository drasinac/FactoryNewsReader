<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColor">#000000</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="actionBarStyle">@style/FactoryNewsReaderActionBar</item>
    </style>

    <style name="FactoryNewsReaderActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/primary_dark</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">#808080</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:colorAccent">#000000</item>
    </style>

</resources>
